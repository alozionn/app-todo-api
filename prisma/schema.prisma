// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Todo {
  id        Int     @id @default(autoincrement())
  name      String
  completed Boolean @default(false)
  user      User?   @relation(fields: [userId], references: [id])
  userId    Int
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  todos    Todo[]
}
